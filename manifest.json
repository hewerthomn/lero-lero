{
    "manifest_version": 2,
    "name": "Adicionar Lero-lero",
    "description": "Clique com o bot√£o direito para adicionar um texto de lero-lero no Google Chrome",
    "version": "1.0",
    "browser_action" : {
        "default_popup": "menu.html"
    },
    "permissions": [
        "contextMenus", "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["jquery-2.2.3.min.js", "content_script.js"]
      }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources" : ["messages/*.json"]
}